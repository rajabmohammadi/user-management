{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
  },
  "exclude": [
    "node_modules",
    "test/**/*.ts"
  ]
}